{
  "name": "veraid-authority",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prebuild": "run-s clean",
    "build": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:eslint": "eslint -c .eslintrc.cjs --fix src",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "eslint -c .eslintrc.cjs src",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:functional": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config src/functionalTests/jest.config.cjs --runInBand --detectOpenHandles",
    "clean": "del-cli build test coverage"
  },
  "dependencies": {
    "@fastify/routes": "^5.1.0",
    "@fastify/type-provider-json-schema-to-ts": "^2.2.2",
    "@peculiar/webcrypto": "^1.4.3",
    "@relaycorp/dnssec": "^1.11.4",
    "@relaycorp/pino-cloud": "^1.0.28",
    "@relaycorp/veraid": "^1.14.2",
    "@relaycorp/webcrypto-kms": "^1.5.12",
    "@typegoose/typegoose": "^11.2.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cloudevents": "^7.0.0",
    "date-fns": "^2.29.3",
    "env-var": "^7.3.0",
    "fastify": "^4.17.0",
    "fastify-jwt-jwks": "^1.1.3",
    "fastify-plugin": "^4.5.0",
    "is-valid-domain": "^0.1.6",
    "json-schema-to-ts": "^2.9.1",
    "mongoose": "^7.2.1",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@relaycorp/eslint-config": "^1.1.108",
    "@relaycorp/shared-config": "^1.9.1",
    "@relaycorp/veraid-authority": "^1.6.6",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/split2": "^4.2.0",
    "del-cli": "^5.0.0",
    "get-port": "^7.0.0",
    "jest": "^29.5.0",
    "jest-extended": "^3.0.2",
    "mockserver-client": "^5.15.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "split2": "^4.1.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "engines": {
    "node": "18"
  }
}
